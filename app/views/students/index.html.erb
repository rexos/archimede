
<div class="row"><h2>Lista studenti</h2></div>
<div class="row">
<table class="striped rounded">
  <thead><tr>
  <th>Nome</th>
  <th>Cognome</th>
  <th>&nbsp;</th>
</tr>
</thead>
  <% @students.each do |t| %>
  <tr>
    <td><%= t.name %></td>
    <td><%= t.last_name %></td>
    
    <td>
    <div class="btn medium danger">
      
      <%= link_to ({:controller => :teachers, :action => :destroy, :student_id => t.id}) do %>
        <i class="icon-cancel"></i>Cancella
      <% end %>
    </div>
    </td>
      
  </tr>
  <% end %>
</table>
</div>
