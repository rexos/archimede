<h2>Profilo Studente : <%= current_user.name.capitalize %></h2>

<div class="row">
  <div class="six columns">
    <h2>Ricerca Docenti</h2>
    <%= form_for :search, url: { :controller => :students, :action => :search_teacher }, :remote => true do |f| %>
    <ul>
      <li class="field">
        <%= f.text_field :text, :placeholder => "Testo Ricerca...", :class => "text input" %>
      </li>
      
      <button class="medium primary btn">
        <a>
	  <i class="icon-search"></i>
	  Cerca
	</a>
      </button>
    </ul>
    <% end %>
  </div>
  <div class="six columns">
  </div>
</div>



